{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "out",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/"
			}
		]
	},
	"emulators": {
		"hosting": {
			"port": 8080,
			"host": "localhost"
		}
	}
}
